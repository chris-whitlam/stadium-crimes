{
  "compilerOptions": {
    "outDir": "build",
    "rootDir": ".",
    "target": "es2016",
    "moduleResolution": "node",
    "strict": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "packages/factories"
  ]
}